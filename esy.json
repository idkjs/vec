{
  "name": "vec",
  "esy": {
    "buildsInSource": "unsafe",
    "build": [ "ln -sfn #{melange.install} node_modules/bs-platform" ]
  },
  "installConfig": {
    "pnp": false
  },
  "scripts": {
    "build": "esy bsb -clean-world;esy bsb -make-world",
    "test": "node test/Test.bs.js",
    "watch-js": "esy b dune build @run_test_js -w",
    "watch-rescript": "esy b dune build @run_rescript_js -w"
  },
  "dependencies": {
    "@opam/ounit2": "2.2.4",
    "melange": "melange-re/melange",
    "ocaml": "4.12.x"
  },
  "devDependencies": { "@opam/ocaml-lsp-server": "*" }
}
